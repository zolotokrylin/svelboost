a.nav-item({...$$restProps}
    href="{href}"
    class="{className}"
    class:nav-item-disabled="{isDisabled}"
    class:nav-item-active="{active}"
    class:nav-item-no-background="{disabledBackground}"
)
    +if('icon')
        Icon(
            icon="{icon}"
            isOutlined="{$$restProps.isOutlined}" 
            width="{15}" 
            height="{15}" 
            colorInherit
        )
    span { label }
    +if('badge')
        span.badge { badge }